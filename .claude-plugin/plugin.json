{
  "name": "ccpm",
  "version": "1.0.0",
  "description": "Claude Code Project Management - Spec-driven development with GitHub Issues, Git worktrees, and parallel AI agents",
  "author": "tegmentum.ai",
  "homepage": "https://github.com/tegmentum/ccpm",
  "repository": "https://github.com/tegmentum/ccpm",
  "license": "MIT",
  "keywords": [
    "project-management",
    "github-issues",
    "worktrees",
    "prd",
    "epic",
    "parallel-agents"
  ],
  "requires": {
    "claude-code": ">=1.0.0",
    "python": ">=3.7"
  },
  "dependencies": {
    "system": {
      "git": "Required for worktree management",
      "gh": "Required for GitHub integration"
    },
    "python": {
      "PyGithub": ">=2.0.0"
    }
  },
  "commands": {
    "pm:status": "Project status dashboard",
    "pm:next": "Show ready tasks",
    "pm:blocked": "Show blocked tasks",
    "pm:in-progress": "Show tasks in progress",
    "pm:standup": "Daily standup report",
    "pm:epic-list": "List all epics",
    "pm:epic-show": "Show epic details",
    "pm:epic-start": "Start epic worktree",
    "pm:epic-close": "Close an epic",
    "pm:epic-refresh": "Refresh epic progress",
    "pm:epic-merge": "Merge epic to main",
    "pm:epic-edit": "Edit epic details",
    "pm:epic-sync": "Sync epic to GitHub",
    "pm:epic-parallel": "Launch parallel agents",
    "pm:epic-decompose": "Break epic into tasks",
    "pm:epic-oneshot": "Single-shot epic creation",
    "pm:task-add": "Add task to epic",
    "pm:task-start": "Start working on task",
    "pm:task-close": "Complete a task",
    "pm:task-show": "Show task details",
    "pm:issue-show": "Show issue details",
    "pm:issue-start": "Start work on issue",
    "pm:issue-close": "Close an issue",
    "pm:issue-reopen": "Reopen an issue",
    "pm:issue-sync": "Sync issue to GitHub",
    "pm:issue-edit": "Edit issue details",
    "pm:issue-analyze": "Analyze issue with AI",
    "pm:prd-new": "Create new PRD",
    "pm:prd-edit": "Edit PRD",
    "pm:prd-parse": "Parse PRD into epic",
    "pm:prd-list": "List all PRDs",
    "pm:prd-status": "Show PRD status",
    "pm:search": "Search across entities",
    "pm:validate": "Validate database",
    "pm:clean": "Clean up database",
    "pm:sync": "Full GitHub sync",
    "pm:import": "Import GitHub issues",
    "pm:init": "Initialize CCPM system",
    "pm:help": "Show help information"
  },
  "agents": {
    "parallel-worker": "Execute parallel work streams in git worktrees",
    "test-runner": "Run tests and analyze results",
    "file-analyzer": "Analyze and summarize file contents",
    "code-analyzer": "Analyze code for bugs and trace logic"
  },
  "hooks": {
    "on_install": "Initialize CCPM database and check dependencies"
  },
  "config": {
    "database_path": "~/.claude/ccpm.db",
    "supports_multiple_instances": false
  }
}
